=simple_form_for stub_model, url: "", html: {autocomplete: 'off', novalidate: true} do |form|
  fieldset
    legend User data
    =form.input :email, placeholder: 'awesome@email.com'
    =form.input :password, hint: "Select a secure password"
    =form.input :gender, collection: ['Male', 'Female'], prompt: "Select a value"
    =form.input :gender, collection: ['Male', 'Female'], as: :radio
    =form.input :subscribe_to_newsletter, as: :boolean
  fieldset
    legend Details
    =form.input :comments, as: :text
  =form.button :submit
